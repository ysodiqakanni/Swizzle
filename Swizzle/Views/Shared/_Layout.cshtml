<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Swizzle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Swizzle.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="p-3">
            <h4 class="mb-4"><a href="/">Swizzle</a></h4>
            <ul class="sidebar-menu">
                <li><i class="fas fa-home"></i> Home</li>
                <li><i class="fas fa-fire"></i> Popular</li>

                <hr>

                <h6 class="px-3 text-muted">TOPICS</h6>
                <li><i class="fas fa-gamepad"></i> Gaming</li>
                <li><i class="fas fa-football-ball"></i> Sports</li>
                <li><i class="fas fa-film"></i> Movies</li>

                <hr>

                <h6 class="px-3 text-muted">RESOURCES</h6>
                <li><i class="fas fa-question-circle"></i> About</li>
                <li><i class="fas fa-blog"></i> Blog</li>
                <li><i class="fas fa-envelope"></i> Contact</li>

                <hr>

                <h6 class="px-3 text-muted">COMMUNITIES</h6>
                <li><i class="fas fa-globe"></i> r/Technology</li>
                <li><i class="fas fa-flask"></i> r/Science</li>
                <li><i class="fas fa-code"></i> r/Programming</li>
            </ul>
        </div>
    </div>

    <!-- Mobile Sidebar Toggle -->
    <button class="mobile-sidebar-toggle position-fixed top-0 start-0 m-2" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <form class="d-flex search-bar mx-3 flex-grow-1">
                    <input class="form-control me-2" type="search" placeholder="Search Swizzle" aria-label="Search">
                </form>
            </div>
            <div class="ms-auto">
                <button class="btn btn-outline-secondary me-2"><i class="fas fa-plus"></i> Create</button>
                <button class="btn btn-outline-primary"><i class="fas fa-user"></i> Login</button>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Swizzle - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Bootstrap JS and Popper -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/scripts.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
