@page "/"
@using Microsoft.AspNetCore.Components.Web

<!-- Main Content -->
<div class="main-content container-fluid pt-6">
    <div class="row">
        <div class="col-md-6 offset-md-0 flex-shrink-1">
            <!-- Post Card 1 -->
            <div class="card post-card">
                <div class="row g-0">
                    <div class="col-md-1 vote-section">
                        <button class="vote-btn upvoted"><i class="fas fa-arrow-up"></i></button>
                        <span>420</span>
                        <button class="vote-btn"><i class="fas fa-arrow-down"></i></button>
                    </div>
                    <div class="col-md-2 d-flex align-items-center justify-content-center p-2">
                        <img src="https://picsum.photos/200/300.webp" alt="Post Thumbnail" class="post-thumbnail">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/Home/SinglePage"> Interesting Technology Breakthrough</a></h5>
                            <p class="card-text text-muted">
                                Detailed description of the technological advancement...
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="post-actions">
                                    <div class="post-action-btn">
                                        <i class="far fa-comment"></i>
                                        <span>256 Comments</span>
                                    </div>
                                    <div class="post-action-btn">
                                        <i class="far fa-heart"></i>
                                        <span>Like</span>
                                    </div>
                                    <div class="post-action-btn">
                                        <i class="fas fa-share"></i>
                                        <span>Share</span>
                                    </div>
                                </div>
                                <small class="text-muted">Posted by u/techguy • 3 hours ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Post Card 2 -->
            <div class="card post-card">
                <div class="row g-0">
                    <div class="col-md-1 vote-section">
                        <button class="vote-btn"><i class="fas fa-arrow-up"></i></button>
                        <span>269</span>
                        <button class="vote-btn downvoted"><i class="fas fa-arrow-down"></i></button>
                    </div>
                    <div class="col-md-2 d-flex align-items-center justify-content-center p-2">
                        <img src="https://picsum.photos/200/300.jpg" alt="Post Thumbnail" class="post-thumbnail">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <h5 class="card-title">Amazing Science Discovery</h5>
                            <p class="card-text text-muted">
                                Revolutionary research that could change our
                                understanding...
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="post-actions">
                                    <div class="post-action-btn">
                                        <i class="far fa-comment"></i>
                                        <span>189 Comments</span>
                                    </div>
                                    <div class="post-action-btn">
                                        <i class="far fa-heart"></i>
                                        <span>Like</span>
                                    </div>
                                    <div class="post-action-btn">
                                        <i class="fas fa-share"></i>
                                        <span>Share</span>
                                    </div>
                                </div>
                                <small class="text-muted">Posted by u/sciencefan • 6 hours ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Popular Communities Section (Visible on larger screens) -->
        <div class="col-md-3 d-none d-md-block flex-shrink-0">
            <div class="popular-communities">
                <h5 class="mb-3">Popular Communities</h5>
                <div class="community-item">
                    <img src="/api/placeholder/40/40" alt="Community Icon">
                    <div>
                        <strong>r/Technology</strong>
                        <div class="text-muted small">14.5k members</div>
                    </div>
                </div>
                <div class="community-item">
                    <img src="/api/placeholder/40/40" alt="Community Icon">
                    <div>
                        <strong>r/Science</strong>
                        <div class="text-muted small">22.3k members</div>
                    </div>
                </div>
                <div class="community-item">
                    <img src="/api/placeholder/40/40" alt="Community Icon">
                    <div>
                        <strong>r/Programming</strong>
                        <div class="text-muted small">35.7k members</div>
                    </div>
                </div>
                <div class="community-item">
                    <img src="/api/placeholder/40/40" alt="Community Icon">
                    <div>
                        <strong>r/Space</strong>
                        <div class="text-muted small">18.2k members</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
